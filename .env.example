# FileStreamBot Environment Configuration
# Copy this file to .env and fill in your values

# ===== REQUIRED CONFIGURATION =====

# Telegram API Credentials (get from https://my.telegram.org)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (get from @userinfobot)
OWNER_ID=your_user_id_here

# Database URL (MongoDB)
# Local: mongodb://localhost:27017/filestream
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
DATABASE_URL=your_database_url_here

# ===== MULTI-BOT SYSTEM (OPTIONAL) =====

# Enable multi-bot mode for speed boost
MULTI_BOT_MODE=false

# Helper Bot Tokens (for multi-bot mode)
# Get additional bot tokens from @BotFather
MULTITOKEN1=
MULTITOKEN2=
MULTITOKEN3=
MULTITOKEN4=
MULTITOKEN5=
MULTITOKEN6=
MULTITOKEN7=
MULTITOKEN8=
MULTITOKEN9=
MULTITOKEN10=

# ===== CHANNEL FEATURES (OPTIONAL) =====

# Authorized Channel (gets special features)
# Get channel ID from @RawDataBot
AUTH_CHANNEL=

# Enable download links for auth channel
GENERATE_DOWNLOAD_LINKS=false

# Logging Channels
FLOG_CHANNEL=  # File upload logs
ULOG_CHANNEL=  # User activity logs

# Force Subscribe (require users to join channel)
FORCE_SUB_ID=
FORCE_UPDATES_CHANNEL=false

# ===== WEB SERVER (OPTIONAL) =====

# Port for web server (default: 8080)
PORT=8080

# Bind address (default: 0.0.0.0)
BIND_ADDRESS=0.0.0.0

# Your domain name
FQDN=

# SSL configuration
HAS_SSL=false
NO_PORT=false

# ===== ADVANCED SETTINGS (OPTIONAL) =====

# Session name (default: StreamBot)
SESSION_NAME=StreamBot

# File expiration time in seconds (default: 3600 = 1 hour)
FILE_EXPIRATION_TIME=3600

# Request timeout in seconds (default: 300 = 5 minutes)
REQUEST_TIMEOUT=300

# Cleanup interval in seconds (default: 300 = 5 minutes)
CLEANUP_INTERVAL=300

# Enable debug logging
DEBUG=false

# Performance optimization
WORKERS=8
SLEEP_THRESHOLD=30

# Custom messages
CUSTOM_START_MSG=
CUSTOM_ABOUT_MSG=

# Custom images (Optional)
FILE_PIC=
START_PIC=
VERIFY_PIC=

